<h1><%= @list.name %></h1>


<% @list.movies.each do |movie| %>
  <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
  <p><%= movie.title %></p>
  <p><%= movie.rating %></p>
  <p><%= movie.overview %></p>
  <p><%= bookmark.comment %></p>
<% end %>



<%= link_to "Back to the list", lists_path %>
<%= link_to "Create a bookmark", new_list_bookmark_path(@list)%>
